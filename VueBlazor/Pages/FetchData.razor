@page "/fetchdata"
@using ViewModel
@using Model
@inject WeatherForecastViewModel ViewModel

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

<button class="btn btn-primary mb-3"
        @onclick="ViewModel.LoadForecastsCommand.Execute"
        disabled="@ViewModel.IsBusy">
    @(ViewModel.IsBusy ? "Loading..." : "Load Forecasts")
</button>

@if (ViewModel.IsBusy)
{
    <p><em>Loading...</em></p>
}
else if (ViewModel.Forecasts == null)
{
    <p><em>Click "Load Forecasts" to fetch data.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in ViewModel.Forecasts)
            {
                <tr>
                    <td>@forecast.Id</td>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        // Auto-load on page initialization
        await ViewModel.LoadForecastsCommand.ExecuteAsync(null);
    }
}
