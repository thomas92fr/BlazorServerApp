@page "/persons"
@using ViewBlazor.Components.Persons
@using ViewBlazor.Components.Commons.Fields
@using Model.ViewModels
@inherits ViewModelPageBase<PersonListViewModel>

<PageTitle>Person Management</PageTitle>

<h1>Person Management</h1>

<div class="mb-3">
    <CommandView Command="@ViewModel.AddPersonCommand" />
    <CommandView Command="@ViewModel.SaveAllCommand" />
    <CommandView Command="@ViewModel.DiscardChangesCommand" />
</div>

@if (ViewModel.ValidationErrors != null && ViewModel.ValidationErrors.Any())
{
    <div class="alert alert-danger">
        <h5>Validation Errors:</h5>
        @foreach (var group in ViewModel.ValidationErrors.GroupBy(e => e.ViewModel))
        {
            <div class="mb-2">
                <strong>@group.Key?.ToString()</strong>
                <ul>
                    @foreach (var error in group)
                    {
                        <li>@error.PropertyName: @error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
}

@if (!string.IsNullOrEmpty(ViewModel.SaveSuccessMessage))
{
    <div class="alert alert-success">
        @ViewModel.SaveSuccessMessage
    </div>
}

<div class="row">
    <div class="col-md-4">
        <h4>Person List</h4>
        <div class="list-group">
            @foreach (var person in ViewModel.Persons)
            {
                <CommandViewGeneric T="PersonViewModel"
                                    Command="@ViewModel.SelectPersonCommand"
                                    Parameter="@person"
                                    ElementType="link"
                                    CssClass="@(person == ViewModel.SelectedPerson ? "list-group-item list-group-item-action active" : "list-group-item list-group-item-action")">
                    @person.Name.Value (@person.Id.Value)
                </CommandViewGeneric>
            }
        </div>
    </div>

    <div class="col-md-8">
        @if (ViewModel.SelectedPerson != null)
        {
            <PersonView ViewModel="@ViewModel.SelectedPerson" />

            <div class="mt-3">
                <CommandView Command="@ViewModel.DeletePersonCommand" />
            </div>
        }
        else
        {
            <p class="text-muted">Select a person to view details</p>
        }
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized(); // CRITICAL: Subscribe to PropertyChanged events
        ViewModel.Initialize();
    }
}
