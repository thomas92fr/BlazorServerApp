@using Model.ViewModels
@using ViewModel

<div class="tab-bar">
    @* Home tab (always present) *@
    <div class="tab-item @(ViewModel.IsHomeActive ? "active" : "")"
         @onclick="@(() => ViewModel.ActivateHome())">
        <span class="oi oi-home tab-icon"></span>
        <span class="tab-title">Home</span>
    </div>

    @* Dynamic tabs *@
    @foreach (var tab in ViewModel.Tabs)
    {
        <div class="tab-item @(tab == ViewModel.ActiveTab ? "active" : "") @(tab.HasChanges ? "has-changes" : "")"
             @onclick="@(() => ViewModel.ActivateTab(tab))">
            <span class="tab-title">@tab.Title</span>
            @if (tab.HasChanges)
            {
                <span class="unsaved-indicator" title="Unsaved changes">*</span>
            }
            <button class="tab-close" title="Close tab"
                    @onclick:stopPropagation="true"
                    @onclick="@(() => RequestCloseTab(tab))">
                <span class="oi oi-x"></span>
            </button>
        </div>
    }
</div>

@* Confirmation dialog for unsaved changes *@
@if (_tabToClose != null)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Unsaved Changes</h5>
                    <button type="button" class="btn-close" @onclick="CancelClose"></button>
                </div>
                <div class="modal-body">
                    <p>The tab "<strong>@_tabToClose.Title</strong>" has unsaved changes.</p>
                    <p>What would you like to do?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelClose">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="DiscardAndClose">Discard Changes</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveAndClose">Save and Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public MainWindowViewModel ViewModel { get; set; } = null!;

    private IRootViewModel? _tabToClose;

    private void RequestCloseTab(IRootViewModel tab)
    {
        if (tab.HasChanges)
        {
            _tabToClose = tab;
        }
        else
        {
            ViewModel.CloseTab(tab, force: true);
        }
    }

    private void CancelClose()
    {
        _tabToClose = null;
    }

    private void DiscardAndClose()
    {
        if (_tabToClose != null)
        {
            _tabToClose.Discard();
            ViewModel.CloseTab(_tabToClose, force: true);
            _tabToClose = null;
        }
    }

    private void SaveAndClose()
    {
        if (_tabToClose != null)
        {
            var errors = _tabToClose.Save();
            if (errors == null || !errors.Any())
            {
                ViewModel.CloseTab(_tabToClose, force: true);
                _tabToClose = null;
            }
            // If save failed, keep dialog open (user can see errors in tab)
        }
    }
}
