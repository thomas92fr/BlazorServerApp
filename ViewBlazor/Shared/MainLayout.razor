@inherits LayoutComponentBase
@using BlazorServerApp.ViewModel
@using ViewBlazor.Components.Tabs
@using System.ComponentModel
@implements IDisposable
@inject MainWindowViewModel MainWindowViewModel

<PageTitle>ViewBlazor</PageTitle>
<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="ViewBlazor" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar FullHeight="true" @bind-Expanded="@sidebarExpanded">
        <NavMenu ViewModel="@MainWindowViewModel" />
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            <TabBar ViewModel="@MainWindowViewModel" />
        </div>
    </RadzenBody>
</RadzenLayout>

<RadzenComponents />

@code {
    bool sidebarExpanded = true;

    protected override void OnInitialized()
    {
        MainWindowViewModel.PropertyChanged += OnViewModelPropertyChanged;
    }

    private void OnViewModelPropertyChanged(object? sender, PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        MainWindowViewModel.PropertyChanged -= OnViewModelPropertyChanged;
    }
}
