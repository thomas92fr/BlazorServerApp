@page
@model BlazorServerApp.ViewBlazor.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div style="display: flex; justify-content: center; align-items: center; min-height: 80vh;">
    <div class="rz-card rz-variant-outlined rz-p-6" style="width: 100%; max-width: 400px;">
        <h3 class="rz-text-align-center rz-mb-6">Login</h3>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="rz-message rz-message-inline rz-message-error rz-mb-4">
                <span class="rz-message-text">@Model.ErrorMessage</span>
            </div>
        }

        <form method="post">
            <div class="rz-form-field rz-variant-outlined rz-mb-4" style="width: 100%;">
                <label class="rz-form-field-label" for="UserName">User Name</label>
                <div class="rz-form-field-content">
                    <input type="text" id="UserName" name="UserName" value="@Model.UserName"
                           class="rz-textbox" required autofocus style="width: 100%;" />
                </div>
            </div>
            <div class="rz-form-field rz-variant-outlined rz-mb-6" style="width: 100%;">
                <label class="rz-form-field-label" for="Password">Password</label>
                <div class="rz-form-field-content">
                    <input type="password" id="Password" name="Password"
                           class="rz-textbox" required style="width: 100%;" />
                </div>
            </div>
            <button type="submit"
                    class="rz-button rz-button-md rz-variant-filled rz-primary"
                    style="width: 100%;">
                <span class="rz-button-text">Sign In</span>
            </button>
        </form>

        <div class="rz-text-align-center rz-mt-4 rz-mb-4" style="display: flex; align-items: center; gap: 0.5rem;">
            <hr style="flex: 1;" />
            <span style="color: var(--rz-text-secondary-color);">or</span>
            <hr style="flex: 1;" />
        </div>

        <a href="/Login?handler=Oidc"
           style="width: 100%; display: flex; justify-content: center; align-items: center; gap: 0.5rem; padding: 0.6rem; border: 2px solid var(--rz-primary); border-radius: var(--rz-border-radius); color: var(--rz-primary); text-decoration: none; font-size: 1rem; box-sizing: border-box;">
            <svg width="18" height="18" viewBox="0 0 48 48"><path fill="#4285F4" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/><path fill="#34A853" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/><path fill="#FBBC05" d="M10.53 28.59a14.5 14.5 0 0 1 0-9.18l-7.98-6.19a24.0 24.0 0 0 0 0 21.56l7.98-6.19z"/><path fill="#EA4335" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/></svg>
            Sign in with Google
        </a>
    </div>
</div>
